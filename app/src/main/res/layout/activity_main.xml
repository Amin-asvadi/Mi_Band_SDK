<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jellygom.mibandsdkdemo.MainActivity">

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/relativeLayout" android:layout_below="@+id/heart" android:layout_centerHorizontal="true"
      android:layout_marginTop="29dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진동"
        android:id="@+id/button_vive"
        android:layout_alignParentStart="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="심박한번측정"
        android:id="@+id/button_heart_start_one"
        android:layout_alignTop="@+id/button_vive"
        android:layout_toEndOf="@+id/button_vive"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="심박여러번측정"
        android:id="@+id/button_heart_start_many"
        android:layout_alignTop="@+id/button_heart_start_one"
        android:layout_toEndOf="@+id/button_heart_start_one"/>
  </RelativeLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="0 bpm"
      android:id="@+id/heart"
      android:layout_marginTop="34dp"
      android:layout_centerHorizontal="true"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAlignment="center"
      android:id="@+id/text"
      android:layout_alignTop="@+id/relativeLayout"
      android:layout_centerHorizontal="true" android:layout_marginTop="55dp"/>


</RelativeLayout>
